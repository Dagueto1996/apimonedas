# Variables de entorno para Docker Compose - API Monedas
# Renombra este archivo a .env para usarlo

# Base de datos PostgreSQL
POSTGRES_DB=monedas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sa
POSTGRES_HOST=postgres
POSTGRES_PORT=5433

# Aplicación
APP_PORT=8080
ADMINER_PORT=8081

# JWT Configuration
JWT_SECRET=mySecretKey123456789
JWT_EXPIRATION=86400000

# Configuración de logs
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_HIBERNATE=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# Configuración JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
